<body class="checkout-page">





    <div class="container">
        <div class="row">

            <!--  ==========  -->
            <!--  = Main content =  -->
            <!--  ==========  -->
            <section class="span12">

                <div class="checkout-container">
                    <div class="row">
                        <div class="span10 offset1">

                            <!--  ==========  -->
                            <!--  = Header =  -->
                            <!--  ==========  -->
                            <header>
                                <div class="row">
                                    <div class="span2">
                                        <a href="index.html"><img src="~/Resources/images/logo-bw.png" alt="Webmarket Logo" width="48" height="48" /></a>
                                    </div>
                                    <div class="span6">
                                        <div class="center-align">
                                            <h1><span class="light">Billing</span> &amp; Shipping Address</h1>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="right-align">
                                            <img src="~/Resources/images/buttons/security.jpg" alt="Security Sign" width="92" height="65" />
                                        </div>
                                    </div>
                                </div>
                            </header>

                            <!--  ==========  -->
                            <!--  = Steps =  -->
                            <!--  ==========  -->
                            <div class="checkout-steps">
                                <div class="clearfix">
                                    <div class="step done">
                                        <div class="step-badge"><i class="icon-ok"></i></div>
                                        <a href="checkout-step-1.html">Shopping Cart</a>
                                    </div>
                                    <div class="step active">
                                        <div class="step-badge">2</div>
                                        Shipping Address
                                    </div>
                                    <div class="step">
                                        <div class="step-badge">2</div>
                                        Payment Method
                                    </div>
                                    <div class="step">
                                        <div class="step-badge">4</div>
                                        Confirm &amp; Pay
                                    </div>
                                </div>
                            </div> <!-- /steps -->
                            <!--  ==========  -->
                            <!--  = Shipping addr form =  -->
                            <!--  ==========  -->

                            <form action="#" method="post" class="form-horizontal form-checkout">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Cliente<span class="red-clr bold">*</span></label>
                                    <div class="controls">
                                        <input type="text" id="firstName" class="span4" required="" value="@Model.Nombres  @Model.Apellidos" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="telephone">Celular<span class="red-clr bold">*</span></label>
                                    <div class="controls">
                                        <input type="tel" id="telephone" class="span4" required="" value="@Model.Celular" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="email">Email<span class="red-clr bold">*</span></label>
                                    <div class="controls">
                                        <input type="email" id="email" class="span4" required="" value="@Model.Correo" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="addr1">Direccion<span class="red-clr bold">*</span></label>
                                    <div class="controls">
                                        <input type="text" id="addr1" class="span4" required="" value="@Model.Direccion" />
                                    </div>
                                </div>
                            </form>

                            <hr />

                            <p class="right-align">
                                In the next step you will choose a payment method &nbsp; &nbsp;
                                <a href="@Url.Action("Paso3","Comprar") " class="btn btn-primary higher bold">Continuar</a>
                            </p>


                        </div>
                    </div>
                </div>


            </section> <!-- /main content -->

        </div>
    </div> <!-- /container -->
